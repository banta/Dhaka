<% title 'Categories' %>

<ul class="categories">
  <% @categories.each do |category| -%>
    <li class="category"><%= link_to category.description, category %> - <%= category.details %></li>
  <% end -%>
</ul>
<% if can? :create, Category %>
  <p><%= link_to 'New Category', new_category_path %></p>
<% end %>