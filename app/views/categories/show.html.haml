- title @category.description
%h1= @category.description
%p= @category.details
%ul.actions
  - if can? :manage, @category
    %li.edit= link_to 'Edit', edit_category_path(@category)
    %li.destroy= link_to 'Destroy', @category, :confirm => 'Are you sure?', :method => :delete
= render 'listings/browser', :listings => @listings