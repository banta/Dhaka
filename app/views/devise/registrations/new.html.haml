%h2 Sign up
= form_for resource, :as => resource_name, :url => registration_path(resource_name) do |f|
  = devise_error_messages!
  %span.field
    %span.label= f.label :name
    %span.input= f.text_field :name
  %span.field
    %span.label= f.label :email
    %span.input= f.email_field :email
  %span.field
    %span.label= f.label :password
    %span.input= f.password_field :password
  %span.field
    %span.label= f.label :password_confirmation
    %span.input= f.password_field :password_confirmation
  %span.submit= f.submit "Sign up"
= render :partial => "devise/shared/links"