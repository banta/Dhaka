!!! 5
%html{html_attrs}
  %head
    %title= title
    %meta(http-equiv='Content-Type' content='text/html; charset=UTF-8')
    %meta(name='description' content='')
    %meta(name='keywords'    content='')
    %meta(name='copyright'   content='Copyright (c) 2011 The University of Chicago. All rights reserved.')
    = stylesheet_link_tag 'application'
    = stylesheet_link_tag controller_name if resource?
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Kreon:400,700'
    = javascript_include_tag 'application'
    = javascript_include_tag controller_name if resource?
    = csrf_meta_tags
    = yield :head
  %body(id=controller_name class=action_name)<
    = render 'layouts/header'
    #content
      %aside#sidebar
        - if content_for? :sidebar
          = yield :sidebar
        - else
          %ul.categories
            - @categories.each do |category|
              - if params[:id] == category.description.downcase
              -# Basically replaced the 'category' url with a pseudo-search link
              -# This can probably be DRYed up by making a helper or something
                %li.category.selected= link_to category.description, listings_path( :q => {:categories_id_positive_and_eq => category.id } )
              - else
                %li.category= link_to category.description, listings_path( :q => {:categories_id_positive_and_eq => category.id } )
      %section#main
        - unless flash.empty?
          #flashes
            - flash.each do |type, text|
              %p{:class => type}= text
        = yield
      .clear
    = render 'layouts/footer'
    - if Rails.env.development?
      #debug><= debug params