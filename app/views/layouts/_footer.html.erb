<%
  first_column_links = [
    'Terms of Serivice',
    'Privacy Policy',
    'Safety & Security'
  ]

  second_column_links = [
    ['Contact Us', page_path('contact')],
    ['Report Abuse', reports_path],
    ['FAQ', answers_path]
  ]
%>

<footer>
  <div class="left">
    <ul>
      <% first_column_links.each do |link| %>
        <li><%= link_to link, page_path(link.split.first.downcase) %></li>
      <% end %>
    </ul>
  </div>
  <div class="center">
    <ul>
      <% second_column_links.each do |link| %>
        <li><%= link_to link[0], link[1] %></li>
      <% end %>
    <ul>
  </div>
  <div class="right">
    <ul>
      <li>Built in Chicago</li>
      <li>&#169; 2011 The University of Chicago.</li>
      <li>All rights reserved.</li>
    </ul>
  </div>
</footer>