%header#marketplace
  %h1= root? ? SITE_NAME : link_to(SITE_NAME, :root)
  = form_tag nil, {:id => :search_listings} do
    = field_set_tag nil, {:id => :search_categories} do
      %span.field
        %span.label= label_tag :categories
        %span.input= select_tag :categories, options_for_select( [['All', 0]].concat( Category.all.collect { |category| [category.description, category.id] } ) )
    = field_set_tag nil, {:id => :search_keywords, :class => :responder} do
      %span.field
        %span.label= label_tag :keywords
        %span.input= text_field_tag nil, :keywords, {:tabindex => 1}
    %span.submit= submit_tag 'Search'
    %ul.actions
      %li.advanced= link_to 'Advanced search'
      %li.save= link_to 'Save this search'